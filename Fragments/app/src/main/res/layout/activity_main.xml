<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#231E2C"
    android:backgroundTint="#231A1A"
    android:backgroundTintMode="src_over"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="131dp"
        android:layout_height="25dp"
        android:text="Red To Blue"
        android:textAlignment="center"
        android:textColor="#CEBAF0"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913" />

    <TextView
        android:id="@+id/goToSimon"
        android:layout_width="137dp"
        android:layout_height="38dp"
        android:text="Simon"
        android:textAlignment="center"
        android:textColor="#F8F6F6"
        android:textColorLink="#FFFFFF"
        android:textSize="14sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="322dp"
        android:layout_height="79dp"
        android:fontFamily="@font/atomic_age"
        android:shadowColor="#FFFFFF"
        android:text="Fragments"
        android:textAlignment="center"
        android:textColor="#2694F6"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/goToSimon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.158" />

</androidx.constraintlayout.widget.ConstraintLayout>